<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kaixue.manage_course.dao.CategoryMapper">
    <resultMap id="categoryNodeMap" type="com.kaixue.domain.course.ext.CategoryNode">
        <id column="one_id" property="id"/>
        <result column="one_name" property="name"/>
        <collection property="children" ofType="com.kaixue.domain.course.ext.CategoryNode">
            <id column="two_id" property="id"/>
            <result column="two_name" property="name"/>
            <collection property="children" ofType="com.kaixue.domain.course.ext.CategoryNode">
                <id column="three_id" property="id"/>
                <result column="three_name" property="name"/>
            </collection>
        </collection>
    </resultMap>
    <select id="findAll" resultMap="categoryNodeMap">
        SELECT
        a.id one_id,
        a.name one_name,
        b.id two_id,
        b.name two_name,
        c.id three_id,
        c.name three_name
        FROM
        category a
        LEFT JOIN category b
        ON b.parent_id = a.id
        LEFT JOIN category c
        ON c.parent_id = b.id
        WHERE a.parent_id = '0'
        ORDER BY a.order_by,
        b.order_by,
        c.order_by
    </select>
</mapper>
